                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "clean:python-visualizer": "gulp cleanPythonVisualizer",
        "extract:python-visualizer": "npm run compile && gulp extractPythonVisualizer"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/mocha": "^2.2.42",
        "@types/node": "^20.4.10",
        "del": "^3.0.0",
        "gulp": "^4.0.2",
        "gulp-filter": "^5.1.0",
        "parse-semver": "^1.1.1",
        "typescript": "^5.1.3",
        "underscore": "^1.9.1"
    },
    "dependencies": {
        "tree-kill": "^1.2.0",
        "uint64be": "^3.0.0",
        "python-shell": "^5.0.0"
    },
    "overrides": {
    	"chokidar": "3.5.3",
    	"glob-parent": "6.0.2"
    }
}
