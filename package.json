                    "scope": "resource"
                },
                "pythonVisualizer.high-contrast.highlightedStackFrame.bgColor": {
                    "type": "string",
                    "default": "#ff7500",
                    "description": "%pythonVisualizer.high-contrast.highlightedStackFrame.bgColor.desc%",
                    "scope": "resource"
                },
                "pythonVisualizer.high-contrast.list-tuple-setTbl.bgColor": {
                    "type": "string",
